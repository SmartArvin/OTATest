<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="700dp"
  android:layout_height="300dp"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  android:background="@drawable/shape_dialog_bg">
  
    
    <TextView 
        android:id="@+id/no_space_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:text="@string/title_nospace_notify"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/no_space_info_title"
        android:background="#4D000000"
        />
    
    <RelativeLayout 
        android:id="@+id/no_space_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_space_info_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/no_space_info_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_sad"
            />
        <TextView 
            android:id="@+id/no_space_info_title_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/no_space_info_img"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="top|left"
			android:maxLines="3"
			android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            />
    </RelativeLayout>
    
    <Button 
        android:id="@+id/no_space_cancel"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="20dp"
       	android:paddingRight="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:singleLine="true"
       	android:marqueeRepeatLimit="marquee_forever"
       	android:ellipsize="marquee"
        android:text="@string/str_btn_close"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:background="@drawable/selector_btn"
        />
  
</RelativeLayout>
